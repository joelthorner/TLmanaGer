{
	"name": "__MSG_appName__",
	"version": "2.3.10",
	"manifest_version": 2,
	"author": "joelthorner",
	"description": "__MSG_appDesc__",
	"homepage_url": "https://github.com/joelthorner/TLmanaGer",
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"default_locale": "en",
	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": true
	},
	"options_page": "src/options/index.html",
	"browser_action": {
		"default_icon": "icons/icon32.png",
		"default_title": "TLmanaGer",
		"default_popup": "src/popup/index.html"
	},
	"permissions": [
		"contentSettings",
		"clipboardRead",
		"clipboardWrite",
		"contextMenus",
		"cookies",
		"notifications",
		"tabs",
		"storage",
		"<all_urls>"
	],
	"web_accessible_resources": [
		"js/*",
		"img/*",
		"fonts/*",
		"src/options/index.html"
	],
	"externally_connectable": {
		"matches": [ 
			"*://localhost/*",
			"*://joelthorner.github.io/emilio-generator/"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://fontawesome.com/icons/*"
			],
			"exclude_matches": [
				"*://fontawesome.com/icons?d=gallery"
			],
			"js": [
				"js/inject/steal-font-awesome.js"
			]
		},
		{
			"matches": [
				"*://*.igd.production/*"
			],
			"exclude_matches": [
				"*://adm.igd.production/*",
				"*://fluiddoc.igd.production/*",
				"*://management.igd.production/*",
				"*://tlgcommerce-hk.igd.production/*"
			],
			"js": [
				"js/inject/dev-flush-cfm.js"
			]
		},
		{
			"matches": [
				"*://8x-hk.logicommerce.net/*",
				"*://8x-os.logicommerce.net/*",
				"*://8x.logicommerce.net/*",
				"*://8x.logicommerce.cn/*",
				"*://adm.igd.production/*",
				"*://adm.igd.pre.production/*"
			],
			"js": [
				"js/inject/background-lc.js",
				"js/inject/pages-grid-lc.js",
				"js/inject/big-controls-lc.js",
				"js/inject/lc-holidays.js",
				"js/inject/dev-lc-bar.js"
			],
			"css": [
				"css/inject/big-controls-ls.css",
				"css/inject/lc-holidays.css",
				"css/inject/dev-lc-bar.css"
			]
		},
		{
			"matches": [
				"*://8x.logicommerce.net/*"
			],
			"js": [
				"js/inject/os-release-version.js"
			]
		},
		{
			"matches": [
				"*://8x-os.logicommerce.net/login/*",
				"*://8x.logicommerce.net/login/*"
			],
			"js": [
				"js/libs/magic-select.js",
				"js/inject/os-branches-btn.js"
			],
			"css": [
				"css/inject/os-branches-btn.css"
			]
		},
		{
			"matches": [
				"*://*.sandbox.logicommerce.net/*",
				"*://*.igd.production/*"
			],
			"js": [
				"js/inject/go-to-fluid-dump.js"
			]
		},
		{
			"matches": [
				"*://*.logicommerce.net/*",
				"*://*.logicommerce.hk/*",
				"*://*.logicommerce.cn/*",
				"*://*.igd.production/*",
				"*://*.igd.pre.production/*"
			],
			"exclude_matches": [
				"*://8x-hk.logicommerce.net/*",
				"*://8x-os.logicommerce.net/*",
				"*://8x.logicommerce.net/*",
				"*://8x.logicommerce.cn/*"
			],
			"js": [
				"js/inject/force-forceview.js"
			]
		},
		{
			"matches": [
				"*://tlgcommercehelp.zendesk.com/*"
			],
			"css": [
				"css/inject/zendesk/main.css",
				"css/inject/zendesk/submit-expander.css",
				"css/inject/zendesk/ticket-consume.css"
			],
			"js": [
				"js/libs/hotkeys.min.js",
				"js/libs/sweetalert2.all.min.js",
				"js/inject/zendesk/main.js",
				"js/inject/zendesk/submit-expander.js",
				"js/inject/zendesk/priority-highlights.js",
				"js/inject/zendesk/extra-commands.js",
				"js/inject/zendesk/disable-editor-autofocus.js",
				"js/inject/zendesk/ticket-consume.js"
			]
		},
		{
			"matches": [
				"*://*/zdreports/rtm.cfm/*"
			],
			"js": [
				"js/inject/zendesk/ticket-consume-iframe.js"
			],
			"all_frames": true
		},
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/libs/moment.js",
				"js/libs/jquery-3.4.0.min.js",
				"js/libs/js.cookie.js",
				"js/defaults.js",
				"js/globalFunctions.js",
				"js/actions/guideLines/load.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}
